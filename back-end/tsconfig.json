// back-end/tsconfig.json

{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
